{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
    "text": "RPI: Fuel & light",
    "subtitle": [
    "Index, base year = 100"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
    },
    "width": 175,
    "height": 200,
    "data": {
    "url": "https://raw.githubusercontent.com/tomcaughley/tomcaughley.github.io/main/Data/data_ONS-CHBG.json",
    "format": {
    "type": "json",
    "property": "years"
    }
    },
    "mark": {
    "type": "line",
    "color": "#2d6f5c",
    "strokeWidth": 2,
    "opacity": 1
    },
    "transform": [
    {
        "filter": "datum.year>=minYear"
    },
    {
    "filter": "datum.year<=maxYear"
    }
    ],
    "params": [
    {
    "name": "minYear",
    "value": 1987,
    "bind": {
    "input": "range",
    "min": 1987,
    "max": 2022,
    "step": 1,
    "name": "Start year:"
    }
    },
    {
    "name": "maxYear",
    "value": 2022,
    "bind": {
    "input": "range",
    "min": 1987,
    "max": 2022,
    "step": 1,
    "name": "End year:"
    }
    }
    ],
    "encoding": {
    "x": {
    "field": "date",
    "type": "temporal",
    "title": null,
    "axis": {
    "grid": false
    }
    },
    "y": {
    "field": "value",
    "type": "quantitative",
    "title": "Inflation index",
    "axis": {
    "grid": false
    }
    }
    }
    }